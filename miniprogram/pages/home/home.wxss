@import "../template/audioPause/audioPause-template.wxss";
.music {
  top: 100rpx;
}
page {
  background-color: #f1f1f1;
}
.box {
  /* background-color: rgba(255, 192, 203,.2); */
  width: 90%;
  height: 100rpx;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6px;
}
.wish {
  color: pink;
  font-size: 18px;
}
.number{
  color: skyblue;
  font-size: 22px;
  margin: 0 10rpx;
}
span {
  font-size: 12px;
}
.img_box {
  width: 90%;
  height: 100%;
  margin: 100rpx auto 40rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
}
.change_img {
  width: 100%;
  height: 1014rpx;
  border-radius: 6px;
  box-shadow: 6px 23px 50px 10px #ccc;
}
.change_icon {
  position: absolute;
  width: 80rpx;
  height: 60rpx;
  bottom: 10rpx;
  left: 50%;
  margin-left: -30rpx;
  z-index: 2;
  box-shadow: none;
  animation: arrow 1.8s  infinite;
}
@keyframes arrow {
  0% {
    transform: translateY(20%);
    opacity:0
  }
  60% {
    transform: translateY(-40%);
    opacity:1
  }
  100% {
    transform: translateY(-80%);
    opacity:0
  }
}
.textplace {
  width: 600rpx;
  height: 260rpx;
  background-color: rgba(113, 92, 110, 0.9);
  position: absolute;
  top: 650rpx;
  left: 50%;
  margin-left: -300rpx;
  text-align: center;
  padding-top: 40rpx;
  font-size: 18px;
  color: #dc9fb7;
}