page {
  background-color: #f1f1f1;
}
.box {
  /* background-color: rgba(255, 192, 203,.2); */
  width: 90%;
  height: 120rpx;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6px;
}
.wish {
  color: pink;
  font-size: 18px;
}
.number{
  color: skyblue;
  font-size: 22px;
  margin: 0 10rpx;
}
span {
  font-size: 12px;
}
.img_box {
  width: 90%;
  height: 600rpx;
  margin: 120rpx auto 40rpx;
}
.img_box image {
  width: 100%;
  height: 560px;
  border-radius: 6px;
  box-shadow: 6px 23px 50px 10px #ccc;
}
.img_box span.change_icon image {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  bottom: 30px;
  left: 50%;
  margin-left: -60rpx;
  z-index: 99;
  box-shadow: none;
  animation: arrow 1s linear infinite;
}
@keyframes arrow {
  0% {
    transform: translate3d(0, -10rpx, 0);
  }
  50% {
    transform: translate3d(0, 0rpx, 0);
  }
  100% {
    transform: translate3d(0, 10rpx, 0);
  }
}